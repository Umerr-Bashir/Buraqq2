@{
}
<body class="Register-body">
    <div class="container-fluid Register-container">
        <div class="row">
            <div class="col-md-4 mx-auto">

                @if (ViewBag.Error != "")
                {
                    <p style="color: red;">@ViewBag.Error</p>
                }
                <div class="card">
                    <div class="card-title Register-title">
                        <h5 class="Account-h5">Login</h5>
                        <div class="fa fa-solid fa-users user-icon"></div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="form-group">
                                <span class="fa fa-solid fa-user"></span><label for="Email">Email:</label>
                                <input type="text" class="form-control" name="Email" id="Email" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Password:</label>
                                <input asp-for="Password" type="password" class="form-control" name="Password" id="Password" />
                            </div>
                     
                            <a asp-controller="Account" asp-action="Register">Register Here!</a>

                            <button type="submit" class="btn Register-btn">Login</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>




    </div>
</body>
