@using Buraqq.Models.ViewModel
@model List<TeacherInfoViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="Teacherprofile-cont">
    <h1>Profile</h1>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-6">
                @*<hr class="text-center hr-profile" />*@
                <div class="list-group">
                    <h5 class="h5-profile"><b>Name:</b>@item.Name</h5><br>
                    <h5 class="h5-profile"><b>Email Address:</b>@item.Email</h5><br>
                    <h5 class="h5-profile"><b>Fee:</b>@item.Fee</h5><br>
                    <h5 class="h5-profile"><b>Subject:</b>@string.Join(", ",item.Subject)</h5><br>
                    <h5 class="h5-profile"><b>Description:</b>@item.Description</h5><br>
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Message" asp-route-id="@item.Id" class="btn btn-Message">Message!</a>
                        <a asp-controller="Home" asp-action="Message" asp-route-id="@item.Id" class="btn btn-Message">Book a Teacher!</a>
                    </div>

                    <hr class="text-center hr-line" />
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img class="Profile-img img-fluid img-thumbnail" src="@item.Image" style="width:80%" />
            </div>
        </div>
    }
</div>


   









